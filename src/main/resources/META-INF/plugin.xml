<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.adgainai.springbooturlfullpath</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>SpringbootUrlFullPath</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="aoionecoder@gmail.com" url="https://codeman.im/">codeman</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
    show full path of url above @GetMapping or @PostMapping annotation, you can copy full path url by click inlay hint<br>

  ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>
    <depends>org.jetbrains.kotlin</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->

    <extensions defaultExtensionNs="com.intellij">
        <codeInsight.codeVisionProvider implementation="com.adgainai.springbooturlfullpath.JavaMappingUrlProvider"/>
        <codeInsight.codeVisionProvider implementation="com.adgainai.springbooturlfullpath.KotlinMappingUrlProvider"/>


        <projectConfigurable
                id="ApolloConfigVisualizationSetting"
                groupId="tools"
                instance="com.adgainai.springbooturlfullpath.MyPluginConfigurable"
                displayName="SpringbootFullPath Setting"/>
        <projectService serviceImplementation="com.adgainai.springbooturlfullpath.MyPluginProjectSettings"/>

    </extensions>

    <extensions defaultExtensionNs="org.jetbrains.kotlin">
        <supportsKotlinPluginMode supportsK1="false" supportsK2="true"/>
    </extensions>

    <change-notes>

        <![CDATA[
  <h2>2.0.0</h2>
  <ul>
    <li>support kotlin K2</li>
    <li>support more url type</li>
    <li>add method select action</li>
  </ul>
]]>

        <![CDATA[
  <h2>1.0.3</h2>
  <ul>
    <li>support get url part from @RequestMapping annotation</li>
    <li>support get url part from both 'path' and 'value' of  @*Mapping annotation</li>
    <li>support custom a prefix for full path url ,you can custom it in Setting ->Tools ->  SpringbootFullPath Setting</li>
  </ul>
]]>
    </change-notes>

    <actions>

        <action
                id="GetMethodBodyContentAtCaretAction"
                class="com.adgainai.springbooturlfullpath.selectaction.GetMethodBodyContentAtCaretAction"
                text="Get Method Body Content at Caret"
                description="获取光标所在方法的body 的content 不包含大括号"
        >
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>

        <action
                id="GetMethodBodyAtCaretAction"
                class="com.adgainai.springbooturlfullpath.selectaction.GetMethodBodyAtCaretAction"
                text="Get Method Body at Caret"
                description="获取光标所在方法的body"
        >
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>

        <action
                id="GetMethodAtCaretAction"
                class="com.adgainai.springbooturlfullpath.selectaction.GetMethodAtCaretAction"
                text="Get Method at Caret"
                description="获取光标所在方法"
        >
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>


    </actions>
</idea-plugin>